extends layout

block content
    nav(class=`navbar navbar-expand-sm ${persona.Usuario.RoleId == 1 ? 'bg-dark' : persona.Usuario.RoleId == 2 ? 'bg-success' : 'bg-primary'} navbar-dark`)
        <!-- Brand -->
        a(class="navbar-brand" href="") CLINICA

        <!-- Links -->
        ul(class="navbar-nav ms-auto mb-2 mb-lg-0")
            if persona.Usuario.RoleId == 1
                li(class="nav-item")
                    a(class="nav-link" href="/") LOBBY
                li(class="nav-item")
                    a(class="nav-link" href="/clinica/agregar") AGREGAR CLINICA
                li(class="nav-item")
                    a(class="nav-link" href="/procedimiento/agregar") AGREGAR PROCED
                li(class="nav-item")
                    a(class="nav-link" href="/medico/agregar") AGREGAR MEDICO
                li(class="nav-item")
                    a(class="nav-link" href="/agenda/crearAgenda") CREAR AGENDA
                li(class="nav-item")
                    a(class="nav-link" href="/agenda/buscarAgenda") BUSCAR AGENDA
            else if persona.Usuario.RoleId == 2
                li(class="nav-item")
                    a(class="nav-link" href="/") LOBBY
                li(class="nav-item")
                    a(class="nav-link" href="/persona/agregar") AGREGAR PERSONA
                li(class="nav-item")
                    a(class="nav-link" href="/turno/allTurnos") TODOS TURNOS
            else
                li(class="nav-item")
                    a(class="nav-link" href="/") LOBBY
                li(class="nav-item")
                    a(class="nav-link" href="/turno/misTurnos") MIS TURNOS
                li(class="nav-item")
                    a(class="nav-link" href="/agenda/buscarAgenda") RESERVAR TURNO
            <!-- Dropdown -->
            li(class="nav-item dropdown")
                a(class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown") #{persona.nombre} #{persona.apellido}
                div(class="dropdown-menu")
                    a(class="dropdown-item" href="/persona/perfil") PERFIL
                    a(class="dropdown-item" href="/singOut") CERRAR SESIÃ“N
    .container-fluid
        .row
            .col-4
            .col-4
                h1 DATOS DE PERFIL
                form(method="post" action="update")
                    .form-group
                        label(for="usuario") USUARIO:
                        input#usuario(type="text" name="usuario" class="form-control" value=persona.Usuario.usuario)
                    .form-group
                        label(for="password") NUEVA PASSWORD:
                        input#password(type="text" name="password" class="form-control")
                    .form-group
                        label(for="dni") DNI:
                        input#dni(type="number" name="dni" class="form-control" value=persona.dni)
                    .form-group
                        label(for="nombre") NOMBRE:
                        input#nombre(type="text" name="nombre" class="form-control" value=persona.nombre)
                    .form-group
                        label(for="apellido") APELLIDO:
                        input#apellido(type="text" name="apellido" class="form-control" value=persona.apellido)
                    .form-group
                        label(for="celular") TELEFONO/CEL:
                        input#celular(type="number" name="celular" class="form-control" value=persona.celular)
                    .form-group
                        label(for="email") EMAIL:
                        input#email(type="email" name="email" class="form-control" value=persona.email)
                    .form-group
                        label(for="domicilio") DOMICILIO:
                        input#domicilio(type="text" name="domicilio" class="form-control" value=persona.domicilio)
                    br
                    button(type="submit" class="btn btn-outline-success" style="margin-left: 40%;") MODIFICAR
            .col-4

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script(src="https://unpkg.com/bootstrap-table@1.19.0/dist/bootstrap-table.min.js")